{
  "name": "smntcs-retro",
  "version": "1.0.0",
  "description": "SMNTCS Retro is a minimalistic theme for the average nerd",
  "author": "Niels Lange",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "SMNTCS Retro"
  ],
  "homepage": "https://github.com/nielslange/smntcs-retro#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielslange/smntcs-retro.git"
  },
  "bugs": {
    "web": "https://github.com/nielslange/smntcs-retro/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@cypress/browserify-preprocessor": "^2.2.2",
    "@wordpress/browserslist-config": "^2.6.0",
    "@wordpress/scripts": "^5.1.0",
    "archiver": "^3.1.1",
    "autoprefixer": "^9.7.3",
    "cypress": "^4.5.0",
    "postcss-cli": "^6.1.3",
    "rtlcss": "^2.4.1",
    "stylelint": "^11.1.1",
    "stylelint-config-wordpress": "^14.0.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "archive": "node archive.js",
    "build": "npm run build:vendor-prefixes && npm run build:rtl && stylelint style.css --fix && stylelint rtl.css --fix",
    "build:rtl": "rtlcss style.css rtl.css",
    "build:vendor-prefixes": "postcss -r --no-map style.css",
    "lint:css": "wp-scripts lint-style 'style.css' 'assets/**/*.css'",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "test": "cypress run --headless --browser chrome",
    "test:open": "cypress open"
  }
}
